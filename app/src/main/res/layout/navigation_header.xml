<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="252dp"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        
        <com.cquant.lizone.view.CircleImageView
            android:id="@+id/nav_iv_portrait"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/ic_profile"
            app:border_width="1dp"
            app:border_color="@color/grey"
            />
        <TextView
            android:id="@+id/nav_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Garfield"
            android:textColor="@color/white_two"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="22sp"/>
        </LinearLayout>
    <!--view
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/-->

    <EditText
        android:id="@+id/nav_ev_inf"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="编辑个人信息"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="19dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nav_tv_sub_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="14dp"
                android:gravity="center"
                android:textColor="@color/white_two"/>
            <TextView
                android:id="@+id/nav_tv_sub_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订阅"
                android:textSize="14dp"
                android:gravity="center"
                android:textColor="@color/white_two"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nav_tv_fans_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="14dp"
                android:gravity="center"
                android:textColor="@color/white_two"/>
            <TextView
                android:id="@+id/nav_tv_fans_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订阅"
                android:textSize="14dp"
                android:gravity="center"
                android:textColor="@color/white_two"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nav_tv_idear_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="14dp"
                android:gravity="center"
                android:textColor="@color/white_two"/>
            <TextView
                android:id="@+id/nav_tv_idea_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易/观点"
                android:textSize="14dp"
                android:gravity="center"
                android:textColor="@color/white_two"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
