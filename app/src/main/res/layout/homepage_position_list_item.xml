<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16sp"
    android:layout_marginRight="16sp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/ex_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="中新油100"
            android:textColor="@color/blue_two"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/ex_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="(新华现货)"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white_two"
            android:textSize="20sp"
            />
    </LinearLayout>
    <TableLayout
        android:stretchColumns="1,2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:id="@+id/new_price"
                style="@style/homepage_position_row_item"
                android:layout_column="1"
                android:text="当前价：299.82"
                />
            <TextView
                android:id="@+id/start_price"
                style="@style/homepage_position_row_item"
                android:layout_column="2"
                android:text="成本价：294.45"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/tv_num"
                style="@style/homepage_position_row_item"
                android:layout_column="1"
                android:text="持仓量：10"
                />
            <TextView
                android:id="@+id/tv_capital"
                style="@style/homepage_position_row_item"
                android:layout_column="2"
                android:text="持仓市值：270385"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/tv_profit"
                style="@style/homepage_position_row_item"
                android:layout_column="1"
                android:text="浮动盈亏：-53700"
                />
            <TextView
                android:id="@+id/tv_yield"
                style="@style/homepage_position_row_item"
                android:layout_column="2"
                android:text="盈亏比例：-62.58"
                />
        </TableRow>
    </TableLayout>
</LinearLayout>
