<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/style_color_primary"
    android:padding="12dp"
    >
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/ex_name"
            android:layout_width="match_parent"
            android:layout_height="0.0px"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:text="现货白银"
            android:textSize="22sp"
            android:textColor="@color/white_two"
            />
        <TextView
            android:id="@+id/ex_code"
            android:layout_width="match_parent"
            android:layout_height="0.0px"
            android:layout_weight="1"
            android:gravity="top|center_horizontal"
            android:text="TJPME"
            android:textSize="22sp"
            android:textColor="@color/white_two"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:divider="@drawable/record_item_inner_divider"
        android:showDividers="middle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.0px"
            android:layout_weight="2"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0.0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/begin_dir"
                    android:layout_width="match_parent"
                    android:layout_height="0.0px"
                    android:layout_weight="1"
                    android:gravity="bottom|left"
                    android:text="2993卖出"
                    android:textSize="16sp"
                    android:textColor="@color/white_two"
                    />
                <TextView
                    android:id="@+id/begin_time"
                    android:layout_width="match_parent"
                    android:layout_height="0.0px"
                    android:layout_weight="1"
                    android:gravity="top|left"
                    android:text="09-10 03:07"
                    android:textSize="16sp"
                    android:textColor="@color/white_two"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0.0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/end_dir"
                    android:layout_width="match_parent"
                    android:layout_height="0.0px"
                    android:layout_weight="1"
                    android:gravity="bottom|left"
                    android:text="3000卖出"
                    android:textSize="16sp"
                    android:textColor="@color/white_two"
                    />
                <TextView
                    android:id="@+id/end_time"
                    android:layout_width="match_parent"
                    android:layout_height="0.0px"
                    android:layout_weight="1"
                    android:gravity="top|left"
                    android:text="09-10 03:09"
                    android:textSize="16sp"
                    android:textColor="@color/white_two"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.0px"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_num"
                android:layout_width="0.0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="1手"
                android:textColor="@color/white_two"
                android:textSize="16sp"
                android:gravity="center_vertical|left"
                />
            <TextView
                android:id="@+id/tv_profit"
                android:layout_width="0.0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="盈利：-105"
                android:textColor="@color/green_two"
                android:textSize="16sp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_yield"
                android:layout_width="0.0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="-4.68%"
                android:textColor="@color/green_two"
                android:textSize="16sp"
                android:gravity="center_vertical|right"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
