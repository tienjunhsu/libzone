<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical">
    <include layout="@layout/toolbar_layout"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onXmlBtClick"
            android:src="@drawable/ic_integral_rule"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/tv_point"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"
            android:drawableRight="@drawable/ic_point_text"
            />
        <TextView
            android:id="@+id/tv_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_point"
            android:text="当前可兑换的礼品数："
            android:textSize="24sp"
            android:textColor="@color/white_two"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="24sp"
            android:textColor="@color/orange"
            android:layout_toRightOf="@id/tv_p"
            android:layout_below="@id/tv_point"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#dedede"/>
    <FrameLayout
        android:id="@+id/cb_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cb_height">

        <com.bigkoo.convenientbanner.ConvenientBanner
            android:id="@+id/convenientBanner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/promotion_click_num"
            android:background="@drawable/event_click_count_bg"
            android:layout_gravity="bottom|left"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textColor="@color/white_two"
            android:textSize="20sp"
            android:text="0人已经参加 " />
    </FrameLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="#dedede"
    >
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_exchange_cash"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="礼品商城"
        android:textSize="24sp"
        android:gravity="center_vertical|left"
        android:textColor="@color/black"
        />

</LinearLayout>
    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"
        >

    </GridView>
</LinearLayout>
