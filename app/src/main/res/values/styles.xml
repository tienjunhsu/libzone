<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--导航栏底色-->
        <item name="colorPrimary">@color/style_color_primary</item>
        <!--状态栏底色-->
        <item name="colorPrimaryDark">@color/black</item>
        <!--导航栏上的标题-->
        <item name="android:textColorPrimary">@color/white_two</item>
        <!--Activity窗口的颜色-->
        <item name="android:windowBackground">@color/style_color_window_background</item>
        <!--EditText 输入框中字体的颜色-->
        <item name="editTextColor">@color/white_two</item>
        <!--EditText提示文字颜色-->
        <item name="android:textColorHint">@color/grey</item>
        <!--按钮选中或者点击获得焦点后的颜色-->
        <item name="colorAccent">#1a69b4</item>
        <!--和 colorAccent相反，正常状态下按钮的颜色-->
        <item name="colorControlNormal">@color/white_two</item>
        <!--Button按钮正常状态颜色-->
        <item name="colorButtonNormal">#1a69b4</item>

        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert</item>

        <!--Tab Page 指示-->
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>

        <!--Activity进入退出动画-->
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>

    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <!--item name="colorControlActivited">@android:color/white</item-->
    </style>

    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_enter_new</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_exit_new</item>
        <item name="android:activityCloseEnterAnimation">@anim/back_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/back_exit</item>
    </style>


    <style name="text_register_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/text_margin_left</item>
        <item name="android:layout_marginRight">@dimen/text_margin_left</item>
        <item name="android:layout_marginBottom">@dimen/text_margin_bottom</item>

    </style>
    <style name="AppTheme.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert"/>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/custom_tab_indicator</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">@color/white_two</item>
        <item name="android:textSize">22sp</item>
        <item name="android:divider">@drawable/custom_tab_indicator_divider</item>
        <item name="android:dividerPadding">10dp</item>
        <item name="android:showDividers">none</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Widget">
    </style>

    <style name="Widget.TabPageIndicator" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:background">@color/style_color_primary</item>
        <item name="android:paddingLeft">22dip</item>
        <item name="android:paddingRight">22dip</item>
        <item name="android:textAppearance">@style/TextAppearance.TabPageIndicator</item>
        <item name="android:textSize">22sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.TabPageIndicator" parent="Widget">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/vpi_dark_theme</item>
    </style>

    <style name="account_row_item">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/white_two</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="homepage_position_row_item">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/white_two</item>
        <item name="android:gravity">left</item>
    </style>
</resources>
